 "html": "<!DOCTYPE html>\n<div class =\"main_div\">\n    <span style= \"float: right;\">\n        Date: {{ frappe.utils.get_datetime(frappe.utils.now()).strftime('%d-%m-%Y %H:%M')}}\n    </span>\n    <center>\n        <h1>Shortage Report</h1>\n        <h2> Lot No: {{doc.name}}</h2>\n    </center>\n</div>\n<div class =\"main_div\">\n    {% set fabric_qty = get_batch_fabric_qty(doc) %}\n    {% set data = get_finish_product(doc) %}\n    {% set finish_items = data[0] %}\n    {% set summary = data[1] %}\n    <table class =\"main_div\">\n        <tr>\n            <td class = \"t_row\">\n                <b><h3>Greige Fabric Received: </h3></b>\n            </td>\n            <td class = \"t_row\">\n                <b><h3>{{fabric_qty}}</h3></b>\n            </td>\n        </tr>\n        {%- for row in finish_items -%}\n            <tr>\n                <td class = \"t_row\">\n                    {{row.item}}\n                </td>\n                <td class = \"t_row\">\n                   {{row.qty}}\n                </td>\n            </tr>\n        {%- endfor -%}\n        \n    </table>\n</div>\n<div class=\"main_div\">\n    <b>\n        <h3>Summary</h3>\n    </b>\n</div>\n<div class=\"main_div\">\n    <table class =\"main_div\">\n        <tr>\n            <td>Party Name</td>\n            <td>Total Grey</td>\n            <td>Factory Shortage</td>\n            <td>Total Finish Prod</td>\n            <td>%age</td>\n            <td>Actual Shortage</td>\n            <td>%age Short</td>\n        </tr>\n        <tr>\n            <td>{{summary.party_name}}</td>\n            <td>{{summary.total_gray}}</td>\n            <td>{{summary.factory_shortage}}</td>\n            <td>{{summary.total_finish_product}}</td>\n            <td>{{summary.age}}</td>\n            <td>{{summary.actual_shortage}}</td>\n            <td>{{summary.age_short}}</td>\n        </tr>\n    </table>\n</div>\n\n",
